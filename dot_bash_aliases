# shellcheck shell=bash
# .bash_aliases

if type "eza" >/dev/null 2>&1; then
    alias ls=eza
fi

function bws() {
    if ! bw login --check >/dev/null; then
        export BW_SESSION=$(bw login --raw)
    fi
    if ! bw unlock --check >/dev/null; then
        export BW_SESSION=$(bw unlock --raw)
    fi
    echo "Syncing Vault..."
    bw sync
    echo "Done"
}
